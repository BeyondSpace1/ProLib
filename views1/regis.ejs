<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
    <link rel="stylesheet" href="regis.css">
    <script type="text/javascript">
		$(document).ready(function(){

			$( "#form" ).submit(function(event) {
				event.preventDefault();

				$.ajax({
					type: 'POST',
					url: '/',
					data: $('#form').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						//console.log(response.Success);
						$('#form')[0].reset();

						document.getElementById("check").innerHTML=response.Success;
         					//ADD THIS CODE
         					setTimeout(function(){
         						document.getElementById("check").innerHTML="";
         					},3000);
         				},
         				error: function() {
         				}
         			})
			});

		});
	</script>
</head>
<body>
    <body>
        <div class="contain">
            <div class="main">
                <h1>Sign Up</h1>
                <div class="a">
                    <div class="b">
                    <form method="post" id="form">
                     <label for="fname">Username</label>
                        <input type="text" id="fname" name="uname" required>
                        
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                        
                        <label for="lname">Password</label>
                        <input type="password" id="lname" name="passwd" required>
                        
                        <label for="lname">Confirm Password</label>
                        <input type="password" id="lname" name="confpasswd" required>
                        
                        <input type="submit" value="Register" id="btn">
                    </form>
                    <div class="re">
                        Already have an account ?<br><a href="/login"><u>Login</u></a><br>
                        <span id="check"></span>
                    </div>
                    </div>
                </div>
        </div>
        <div class="c">
            <img src="./ProLib-logos_white.png" alt="">
        </div>
        </div>
</body>
</body>
</html>